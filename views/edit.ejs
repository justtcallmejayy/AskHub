      <!-- <h2 class="username">@<%= post.username %></h2>
      <h3 class="id">Post ID: <%= post.id %></h3> -->
    </header>

    <!-- The form uses a PUT method to update the post -->
    <form action="/posts/<%= post.id %>?_method=PATCH" method="POST">
      <!-- Hidden input to emulate PUT/PATCH method -->
      <input type="hidden" name="_method" value="PUT" />

      <textarea
        name="content"
        id="content"
        placeholder="Edit your post here"
        required
      >
<%= post.content %></textarea
      >

      <div class="form-actions">
        <button type="submit">Update Post</button>
        <a href="http://localhost:8080/posts">Cancel</a>
      </div>
    </form>

