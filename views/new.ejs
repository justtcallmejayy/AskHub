<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create New Post</title>
  <link rel="stylesheet" href="/style.css"> <!-- Global Styles -->
  <link rel="stylesheet" href="/css/new.css">   <!-- New-Specific Styles -->
  </head>
  <body>
    <div class="form-container">
      <h1>Create New Post</h1>
      <button id="theme-switch">
        <!-- Light mode icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          height="24px"
          viewBox="0 -960 960 960"
          width="24px"
        >
          <path
            d="M480-120q-150 0-255-105T120-480q0-150 105-255t255-105q14 0 27.5 1t26.5 3q-41 29-65.5 75.5T444-660q0 90 63 153t153 63q55 0 101-24.5t75-65.5q2 13 3 26.5t1 27.5q0 150-105 255T480-120Z"
          />
        </svg>
        <!-- Dark mode icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          height="24px"
          viewBox="0 -960 960 960"
          width="24px"
        >
          <path
            d="M480-280q-83 0-141.5-58.5T280-480q0-83 58.5-141.5T480-680q83 0 141.5 58.5T680-480q0 83-58.5 141.5T480-280ZM200-440H40v-80h160v80Zm720 0H760v-80h160v80ZM440-760v-160h80v160h-80Zm0 720v-160h80v160h-80ZM256-650l-101-97 57-59 96 100-52 56Zm492 496-97-101 53-55 101 97-57 59Zm-98-550 97-101 59 57-100 96-56-52ZM154-212l101-97 55 53-97 101-59-57Z"
          />
        </svg>
      </button>
      <form action="/posts" method="POST">
        <input
          type="text"
          name="username"
          minlength="3"
          maxlength="20"
          pattern="[a-zA-Z0-9_]+"
          required
        />

        <textarea
          id="content"
          name="content"
          placeholder="Write your post"
          required
        ></textarea>

        <!-- Add a loader element inside the form -->
        <div id="loader" style="display: none">Loading...</div>

        <button type="submit">Submit</button>
      </form>
    </div>

    <!-- Footer -->
    <footer>
      <div class="footer-container">
        <div class="footer-links">
          <a href="/about">About</a>
          <a href="/help">Help</a>
          <a href="/privacy">Privacy</a>
          <a href="/terms">Terms</a>
        </div>
        <div class="footer-social">
          <a
            href="https://github.com/justtcallmejayy"
            target="_blank"
            class="social-icon"
          >
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/9/91/Octicons-mark-github.svg"
              alt="Github"
            />
          </a>
          <a
            href="https://x.com/JayyWebDevX"
            target="_blank"
            class="social-icon"
          >
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/c/ce/X_logo_2023.svg"
              alt="Twitter"
            />
          </a>
          <a
            href="https://www.linkedin.com/in/jaychoksi18/"
            target="_blank"
            class="social-icon"
          >
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/8/81/LinkedIn_icon.svg"
              alt="LinkedIn"
            />
          </a>
        </div>
        <p class="footer-text">Â© 2024 Quora Clone. All rights reserved.</p>
      </div>
    </footer>

    <script>
      document.querySelector("form").addEventListener("submit", function () {
        document.getElementById("loader").style.display = "block";
      });
    </script>

    <script src="/script.js"></script>
  </body>
</html>
