<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Quora Posts</h1>

        <!-- Loop through posts -->
        <% for (let post of posts) { %>
            <div class="post">
                <h2 class="username">@<%= post.username %></h2>
                <p class="content"><%= post.content %></p>
                <p class="separator">----------------------------------------------</p>
            </div>
        <% } %>

        <!-- Create New Post Button -->
        <div class="new-post-link">
            <a href="http://localhost:8080/posts/new" class="button">Create New Post</a>
        </div>
    </div>
</body>
</html>
